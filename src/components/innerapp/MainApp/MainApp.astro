---
import { Image } from 'astro:assets';

import MapIcon from '@/assets/icons/inner-app/map.svg';
import ChevronRightIcon from '@/assets/icons/inner-app/chevron-right.svg';
import { EmblaCarousel } from '../EmblaCarousel/EmblaCarousel';
import FooterBlockText from '../FooterBlockText/FooterBlockText';
import { InnerAppText } from '@/content/innerAppText';
---

<main class="font-poppins">
  <!-- Header Background -->
  <Image src={InnerAppText.mainApp.bgHeader} alt="Background Image in Header" width={400} height={200} class="w-full -mt-5" />
  <div class="container">
    <div class="px-4">
      <!-- Location Info -->
      <div class="mt-4 flex items-center gap-4 py-2 px-5 rounded-xl border border-[#01A444] bg-[#F1F8E6]">
        <MapIcon class="text-[#01A444]" />
        <p class="text-sm min-[420px]:text-lg">
          {InnerAppText.mainApp.locationInfo}
        </p>
      </div>

      <!-- Title Block -->
      <div class="my-5 flex items-center gap-4 py-2 px-5 rounded-xl border border-[#01A444] bg-[#F1F8E6]">
        <p class="text-lg min-[420px]:text-2xl text-center uppercase font-bold">
          {InnerAppText.mainApp.titleBlock.oneChunk} <span class="text-[#01A444]">{InnerAppText.mainApp.titleBlock.twoChunk}</span> {InnerAppText.mainApp.titleBlock.threeChunk}
        </p>
      </div>
    </div>

    <!-- VSL Block -->
    <div class="h-47 bg-[#D9D9D9] font-bold text-[40px] uppercase flex items-center justify-center">
      {InnerAppText.mainApp.VSLBlock}
    </div>

    <!-- Online Availability -->
    <div class="px-4">
      <div class="my-5 flex items-center gap-4 py-2 px-5 rounded-xl border border-[#01A444] bg-[#F1F8E6]">
        <p class="text-base min-[420px]:text-2xl text-center uppercase font-bold font-roboto">
          <span class="text-[#01A444]">{InnerAppText.mainApp.onlineAvailability.oneChunk}</span> {InnerAppText.mainApp.onlineAvailability.twoChunk}
          <span class="text-[#FF0000]">{InnerAppText.mainApp.onlineAvailability.threeChunk}</span>
        </p>
      </div>
    </div>

    <!-- Sale Product Card -->
    <div class="px-8">
      <div class="py-3 px-4 flex flex-col gap-2 text-center border-2 border-[#008D49] rounded-xl">
        <Image src={InnerAppText.mainApp.saleProductCard.img} alt="Sale Product" width={300} height={200} class="w-full" />
        <div class="flex items-center gap-2 justify-center">
          <span class="bg-[#FDE3D2] rounded-lg px-1 py-1 text-[#E23842] text-lg font-bold">{InnerAppText.mainApp.saleProductCard.sale}</span>
          <span class="line-through text-[#E23842]">{InnerAppText.mainApp.saleProductCard.oldPrice}</span>
        </div>
        <p class="text-[#01A444] text-xl font-bold">{InnerAppText.mainApp.saleProductCard.newPrice}</p>
        <button class="border-2 border-[#01A444] bg-[#008D49] text-white text-lg rounded-xl py-3 cursor-pointer font-bold">
          {InnerAppText.mainApp.saleProductCard.btnTitle}
        </button>
      </div>
    </div>

    <!-- Promo Section -->
    <div class="my-5">
      <div class="flex justify-between items-center mb-5 px-4">
        <p class="text-lg font-semibold">{InnerAppText.mainApp.promoSection.title}</p>
        <a href="#" class="underline text-[#01A444] flex items-center">
          {InnerAppText.mainApp.promoSection.linkTitle}
          <ChevronRightIcon class="size-5" />
        </a>
      </div>
      <EmblaCarousel client:visible />
    </div>

    <!-- Social Media Section -->
    <div class="px-4">
      <p class="text-center mt-5 mb-3 text-lg font-semibold text-[#444]">{InnerAppText.mainApp.socialMediaSection.title}</p>
      <div class="flex items-center gap-3 justify-center">
        <a href={InnerAppText.mainApp.socialMediaSection.link1.url}><Image src={InnerAppText.mainApp.socialMediaSection.link1.title} alt="Icon" width={40} height={40} /></a>
        <a href={InnerAppText.mainApp.socialMediaSection.link2.url}><Image src={InnerAppText.mainApp.socialMediaSection.link2.title} alt="X" width={40} height={40} /></a>
        <a href={InnerAppText.mainApp.socialMediaSection.link3.url}><Image src={InnerAppText.mainApp.socialMediaSection.link3.title} alt="Icon" width={40} height={40} /></a>
        <a href={InnerAppText.mainApp.socialMediaSection.link4.url}><Image src={InnerAppText.mainApp.socialMediaSection.link4.title} alt="Tiktok" width={40} height={40} /></a>
      </div>

      <!-- App Download -->
      <p class="text-center my-5 text-lg text-[#444]">{InnerAppText.mainApp.appDownload.title}</p>
      <div class="flex justify-center items-center gap-3">
        <a href={InnerAppText.mainApp.appDownload.link1.url}>
          <Image src={InnerAppText.mainApp.appDownload.link1.src} alt={InnerAppText.mainApp.appDownload.link1.alt} width={130} height={40} />
        </a>
        <a href={InnerAppText.mainApp.appDownload.link2.url}>
          <Image src={InnerAppText.mainApp.appDownload.link2.src} alt={InnerAppText.mainApp.appDownload.link2.alt} width={130} height={40} />
        </a>
      </div>
    </div>

    <!-- Footer -->
    <footer class="mt-8 px-4">
      <p class="my-5 text-[10px] text-[#111a05] text-center">
        {InnerAppText.mainApp.footer.copyright.oneChunk} <span class="text-[#00a445]">{InnerAppText.mainApp.footer.copyright.twoChunk}</span>{InnerAppText.mainApp.footer.copyright.threeChunk}
      </p>
      <p class="text-sm font-bold text-center">
        {InnerAppText.mainApp.footer.subTitle}
      </p>
      <FooterBlockText client:load />
    </footer>
  </div>
</main>